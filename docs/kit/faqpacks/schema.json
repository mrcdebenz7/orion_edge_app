{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/faqpacks.schema.json",
  "title": "Orion FAQ Pack",
  "type": "object",
  "additionalProperties": false,
  "minProperties": 1,
  "patternProperties": {
    "^[a-z0-9_]+$": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["intent", "utterances", "reply"],
        "properties": {
          "intent": {
            "type": "string",
            "minLength": 1,
            "maxLength": 80
          },
          "utterances": {
            "type": "array",
            "minItems": 1,
            "maxItems": 20,
            "items": {
              "type": "string",
              "minLength": 1,
              "maxLength": 200
            }
          },
          "reply": {
            "type": "string",
            "minLength": 1,
            "maxLength": 800
          },
          "tone": { "type": ["string", "null"] },
          "source_notes": { "type": ["string", "null"] },
          "actions": { "type": "array", "items": { "type": "string" } },
          "links": { "type": "object" },
          "guardrails": { "type": ["string", "null"] }
        }
      }
    }
  }
}


